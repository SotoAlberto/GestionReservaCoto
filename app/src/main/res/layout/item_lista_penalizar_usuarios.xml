<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="69dp">

    <ImageView
        android:id="@+id/ic_pan_tool_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:padding="4dp"
        app:srcCompat="@drawable/ic_pan_tool_black_24dp" />

    <TextView
        android:id="@+id/item_lista_penalizar_usuarios_nombre_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ic_pan_tool_black_24dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/ic_pan_tool_black_24dp"
        android:padding="4dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/item_lista_penalizar_usuarios_telefono_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ic_pan_tool_black_24dp"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/ic_pan_tool_black_24dp"
        android:padding="4dp"
        android:layout_marginBottom="5dp"/>

</RelativeLayout>